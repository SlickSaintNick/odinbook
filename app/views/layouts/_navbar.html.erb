<div class="navbar">
  <% if current_user %>
    <ul class="navbar-left">
      <li><%= link_to image_tag("icons/odin-logo.svg", class: "icon", alt: "Home"), root_path %></li>
      <li><%= link_to image_tag("icons/back.svg", class: "icon", alt: "Back"), :back %></li>
    </ul>
    <ul class="navbar-center">
      <% if current_user.profile %>
        <li><%= link_to image_tag("icons/home.svg", class: "icon", alt: "Home"), root_path %></li>
        <li><%= link_to image_tag("icons/my-profile.svg", class: "icon", alt: "My Profile"), profile_path(current_user.profile) %></li>
      <% else %>
        <li><%= link_to image_tag("icons/create-profile.svg", class: "icon", alt: "Create Profile"), new_profile_path %></li>
      <% end %>
      <li><%= link_to image_tag("icons/user-index.svg", class: "icon", alt: "User Index"), profiles_path %></li>
    </ul>
    <ul class="navbar-right">
      <li><%= link_to image_tag("icons/sign-out.svg", class: "icon", alt: "Sign out"), destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %></li>
    </ul>
  <% else %>
    <ul class="navbar-right">
      <li><%= link_to image_tag("icons/sign-in.svg", class: "icon", alt: "Sign in"), new_user_session_path %></li>
    </ul>
  <% end %>
</div>