<div class="navbar">
  <% if current_user %>
    <div class="navbar-left">
      <%= link_to image_tag("icons/odin-logo.svg", class: "icon", alt: "Home"), root_path %>
      <%= link_to image_tag("icons/back.svg", class: "icon", alt: "Back"), :back %>
    </div>
    <div class="navbar-center">
      <% if current_user.profile %>
        <%= link_to image_tag("icons/home.svg", class: "icon", alt: "Home"), root_path %>
        <%= link_to image_tag("icons/my-profile.svg", class: "icon", alt: "My Profile"), profile_path(current_user.profile) %>
      <% else %>
        <%= link_to image_tag("icons/create-profile.svg", class: "icon", alt: "Create Profile"), new_profile_path %>
      <% end %>
      <%= link_to image_tag("icons/user-index.svg", class: "icon", alt: "User Index"), profiles_path %>
    </div>
    <div class="navbar-right">
      <%= link_to image_tag("icons/sign-out.svg", class: "icon", alt: "Sign out"), destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
    </div>
  <% else %>
    <div class="navbar-right">
      <%= link_to image_tag("icons/sign-in.svg", class: "icon", alt: "Sign in"), new_user_session_path %>
    </div>
  <% end %>
</div>