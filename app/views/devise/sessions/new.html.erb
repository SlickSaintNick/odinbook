<div class="container">
  <div class="login">
    
    <h1 class="login-odinbook">odinbook</h1>
    
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, hidden: true %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address" %>
        </div>
    
        <div class="field">
          <%= f.label :password, hidden: true %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        </div>
    
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
    
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
