<div class="container">
  <div class="sign-up">
    
    
    <div class="sign-up-form">
      <h1 class="sign-up-heading">Sign Up</h1>
      <div class="sign-up-caption">It's quick and easy.</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email, hidden: true %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address" %>
        </div>
      
        <div class="field new-password">
          <%= f.label :password, hidden:true %>
          <% if @minimum_password_length %>
            <div><em>(<%= @minimum_password_length %> characters minimum)</em></div>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, hidden:true %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
        </div>
      
        <div class="actions-sign-up">
          <%= f.submit "Create new account" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
