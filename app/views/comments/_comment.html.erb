<div>
  <%= image_tag comment.user.profile.profile_image.variant(resize_to_limit: [nil, 30]) if comment.user.profile.profile_image.present? %>
</div>
<div>
  <%= comment.user.profile.name %><br>
  <%= comment.body %>
</div>
<div>
  <%= format_time(comment.created_at) %> 路
  
  <% if current_user.liked_comments.include?(comment) %>
    <%= link_to 'Unlike', like_path(comment.likes.find_by(user: current_user)), method: :delete, data: {turbo_method: :delete}%> 路
  <% else %>
    <%= link_to 'Like', likes_path(likeable_id: comment.id, likeable_type: 'comment'), method: :post, data: {turbo_method: :post} %> 路
  <% end %>
  
  <%= link_to "Reply", new_post_comment_path(comment.post, reply_to_comment: comment.id) %>
  <% if comment.likers.count > 0 then %>
     路 <%= comment.likers.count %>
  <% end %>
  
  <% if comment.user_id == current_user.id %>
     路 <%= link_to "Edit", edit_post_comment_path(comment.post, comment) %>
     路 <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, data: {turbo_method: :delete} %>
  <% end %>
</div>