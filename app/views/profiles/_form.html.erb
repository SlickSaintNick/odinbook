<div>
  <%= form_with model: @profile do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :profile_image %>
      <%= form.file_field :profile_image %>
    </div>
    <div>
      <%= form.label :bio %><br>
      <%= form.text_area :bio, rows: "5" %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>